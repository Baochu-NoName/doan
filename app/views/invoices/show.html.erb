<p>
  <strong>Status:</strong>
  <%= @invoice.status %>
</p>
<p>
  <strong>Username:</strong>
  <%= @invoice.username %>
</p>
<p>
  <strong>Phone Number:</strong>
  <%= @invoice.phone_number %>
</p>
<p> 
    <%= @invoice.total.to_s.to_d %>
</p>

<h1>Order Items</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Product name</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% if @invoice.invoice_items.present? %>
      <% @invoice.invoice_items.each do |invoice_item| %>
      <tr>
        <td><%= invoice_item.product_name %></td>
        <td><%= invoice_item.product_unit_price.to_s.to_d %></td>
        <td><%= invoice_item.product_quantity.to_i %></td> 
        <% end %>
        <% else %>
        <p>No items</p>
      <% end %>
      </tr>
  </tbody>  
</table>
<%= link_to 'Back', invoices_path, class:'btn btn-default' %>
